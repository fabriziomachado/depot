<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html') %></h1> 
<span><%= "(You've been accessed this store "+ pluralize( @count_access_store_index, 'time') +")" if @count_access_store_index > 5 %></span>

<% @products.each do |product| %>
  <div class="entry">
    <%= link_to(image_tag(product.image_url), 
            line_items_path(:product_id => product), 
            html_options = {:method => :post}) %>

    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price) %></span>
      <%= button_to t('.add_html'), line_items_path(:product_id => product), :remote => true %>
    </div>
  </div>
<% end %>
